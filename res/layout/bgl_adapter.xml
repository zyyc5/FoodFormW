<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list_click_style"
    android:clickable="true"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        
         >

        <ImageView
            android:id="@+id/img_title_bgl"
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:src="@drawable/bt_title_menu" />

        <TextView
            android:id="@+id/tv_yxfw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/img_title_bgl"
            android:textColor="@color/black2"
            android:text="影响范围：全国" />

        <TextView
            android:id="@+id/tv_title_t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_yxfw"
            android:layout_below="@+id/tv_yxfw"
            android:layout_marginRight="5dip"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:text="TextView" />

        <TextView
            android:id="@+id/tv_date_bgl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_title_t"
            android:layout_below="@+id/tv_title_t"
            android:textColor="@color/black2"
            android:text="2013—08-1" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="1dp"
            android:src="@drawable/arrow_right_nor" />

    </RelativeLayout>

</LinearLayout>