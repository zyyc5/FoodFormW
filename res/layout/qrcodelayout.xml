<?xml version="1.0" encoding="UTF-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="fill_parent"
             android:layout_height="fill_parent">

  <SurfaceView android:id="@+id/preview_view"
               android:layout_width="fill_parent"
               android:layout_gravity="center"
               android:layout_height="fill_parent"
               android:layout_centerInParent="true"/>

  <edu.szzydx.spsy.qrcode.view.ViewfinderView
      android:id="@+id/viewfinder_view"
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      
      android:background="@color/transparent"/>



  <TextView android:id="@+id/txtResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"          
            android:textSize="14sp"/>

 <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/mbottom_90"
        android:layout_alignParentBottom="true" >

        <Button
            android:id="@+id/bt_flash_on"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:background="@drawable/scan_flash_off" />

        <Button
            android:id="@+id/bt_flash_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/scan_bt_cancel"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" >
            
           
            <Button
            android:id="@+id/bt_flash_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/scan_bt_input"
            />
        
        <Button
            android:id="@+id/bt_flash_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/scan_bt_picture"
            />
            
        </LinearLayout>

        

    </RelativeLayout>

</RelativeLayout>
  
</FrameLayout>
